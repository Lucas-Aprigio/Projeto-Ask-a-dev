<%- include ("partials/header.ejs") %>
<body>
    <%- include ("partials/navbar.ejs") %>

    <div class="container" id="container-pergunta">

        <div class="card">
            <div class="card header">
                <p><h3><%= pergunta.titulo %></h3></p>
            </div>
            <div class="card-body">
                <p> <%= pergunta.descricao %> </p>
                <hr>
                <form method="POST" action="/salvaresposta">
                    <label>Answer</label>
                    <textarea type="text" placeholder="Write you answer here..." class="form-control" name="corpo"></textarea>
                    <input type="hidden" name="perguntaId" value= "<%= pergunta.id %>">
                    <br>
                    <button type="submit" class="btn btn-dark">Publish</button>
                </form>        
            </div>           
        </div>
        





    </div>
    
    <div class="container">
        <h1>Answers</h1>
        <% resposta.forEach(resposta => { %>
            <div class="card" id="c">
                <div class="card body">
                    <p>Answered on <%= resposta.createdAt%>: </p>
                    <p><%= resposta.corpo %></p>
                </div>           
            </div>
        <%})%>
    </div>



</body>
<%- include ("partials/footer.ejs") %>